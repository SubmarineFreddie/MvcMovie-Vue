{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},
	"[javascript][typescript][typescriptreact][vue][json][css][scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/bin": true,
		"**/obj": true,
		"**/node_modules": true,
		"**/.idea": true,
		"**/.vs": true
	},
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/dist": true
	},
	"eslint.workingDirectories": ["./Web"],
	"cSpell.words": ["Colour"]
}